---
import BaseLayout from '../layouts/BaseLayout.astro'
import type { PageParam } from '../types'

const pageParam: PageParam = {
  id: 'about',
  title: '会社概要',
}
---

<BaseLayout pageParam={pageParam}>
  <main class="main-content container">
    <h1>About</h1>
    <p>こちらはサイトのAboutページです。</p>
    <section>
      <h2>会社概要</h2>
      <p>ここに会社の説明などを書きます。</p>
    </section>
    <section>
      <h2>沿革</h2>
      <p>会社の歴史や背景などを紹介します。</p>
    </section>
  </main>
</BaseLayout>
